<Window x:Class="kafe.WaiterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Официант" Height="400" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <!-- Логотип и заголовок -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
            <TextBlock Text="Официант" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- элементы интерфейса для функциональности официанта -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Пример: кнопка для создания нового заказа -->
            <Button Content="Создать новый заказ" Height="30" Width="200" Margin="0,10,0,0" Click="CreateOrderButton_Click"/>
            <!-- кнопка для изменения статуса заказа -->
            <Button Content="Изменить статус заказа" Height="30" Width="200" Margin="0,10,0,0" Click="ChangeOrderStatusButton_Click"/>
            <!-- для возврата на главную -->
            <Button Content="На главную" Height="30" Width="100" Margin="0,10,0,0" Click="BackToMain_Click"/>
        </StackPanel>
    </Grid>
</Window>
