<Window x:Class="kafe.ChefWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Повар" Height="400" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <!-- Логотип и заголовок -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
            <TextBlock Text="Повар" FontSize="16" FontWeight="Bold"/>
        </StackPanel>

        <!-- Добавьте элементы интерфейса для функциональности повара -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Пример: кнопка для просмотра заказов -->
            <Button Content="Просмотр заказов" Height="30" Width="200" Margin="0,10,0,0" Click="ViewOrdersButton_Click"/>
            <!-- Пример: кнопка для установки статуса заказа -->
            <Button Content="Изменить статус заказа" Height="30" Width="200" Margin="0,10,0,0" Click="ChangeOrderStatusButton_Click"/>
            <!-- Кнопка для возврата на главную -->
            <Button Content="На главную" Height="30" Width="100" Margin="0,10,0,0" Click="BackToMain_Click"/>
        </StackPanel>
    </Grid>
</Window>
